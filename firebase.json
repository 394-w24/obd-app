{
  "hosting": [{ 
    "target": "dev",
    "public": "dev/dist",
    "ignore": [ 
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ], 
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  { 
    "target": "prod",
    "public": "prod/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ], 
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
]
}
